<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <AssemblyName>ils</AssemblyName>
    
    <!-- アセンブリ情報を追加 -->
    <Company>bry-ful</Company>
    <Product>Image Lister</Product>
    <Description>画像ファイルをリストアップしてJSON形式で出力するツール</Description>
    <Copyright>Copyright © 2026</Copyright>
    <Version>1.0.0</Version>
    <FileVersion>1.0.0.0</FileVersion>
    <NeutralLanguage>ja-JP</NeutralLanguage>
    <Title>Image Lister</Title>
    <Authors>bry-ful</Authors>
    <PackageProjectUrl>https://github.com/bryful/ILS</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/bryful/ILS</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Link="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
